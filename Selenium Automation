public class CompInestTest
{
private WebDriver driver;
private Map<String, Object> vars;
JavascriptExecutor js;

@Before
public void setUp() 
{
  System.setProperty("webdriver.chrome.driver","C:\\OfficialWork\\Drivers\\chromedriver.exe");
  driver = new ChromeDriver();
  js = (JavascriptExecutor) driver;
  vars = new HashMap<String, Object>();
}

@After
public void tearDown() 
{
  driver.quit();
}
@Test
public void compInest() throws InterruptedException 
{
  driver.get("https://www.thecalculatorsite.com/finance/calculators/compoundinterestcalculator.php");
  //driver.switchTo().alert().accept()
  driver.manage().window().setSize(new Dimension(1382, 744));
  driver.findElement(By.id("amount")).click();
  driver.findElement(By.id("amount")).sendKeys("1");
  driver.findElement(By.id("percent")).click();
  driver.findElement(By.id("percent")).sendKeys("1");
  driver.findElement(By.id("periodnum")).click();
  driver.findElement(By.id("periodnum")).sendKeys("1");
  driver.findElement(By.id("regdeposit")).click();
  driver.findElement(By.id("regdeposit")).sendKeys("1");
  driver.findElement(By.name("formsubmit")).click();
  
  Thread.sleep(2000);
  
  js.executeScript("window.scrollTo(0,1084)");
  //String value = driver.findElement(By.cssSelector(".total:nth-child(2)")).getAttribute("value");
  //driver.findElement(By.cssSelector(".total:nth-child(2)")).click();
  assertThat(driver.findElement(By.cssSelector(".total:nth-child(2)")).getText(), is("$12.00"));
  
//System.out.println(value);
}
}

